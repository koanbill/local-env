# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = spaces
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{json,yaml}]
indent_size = 2

[*.nix]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.sh]
indent_size = 2
